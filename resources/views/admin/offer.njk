{% extends 'admin.layout' %}
{% block content %}
  <title>Offers</title>
  <form action="/offer" method="post" style="margin-left:100px" enctype="multipart/form-data">

    <div class="form-group">
      <label for="">Offer Name</label>
      <input type="text" class="form-control" style="width:300px;" name="brandname" placeholder="Enter brand name" required="required">
    </div>
    <div class="form-group">
      <label for="date">Start Date</label>
      <input type="date" class="form-control" style="width:300px;" name="startdate" placeholder="Start Date">
    </div>
    <div class="form-group">
      <label for="">End Date</label>
      <input type="date" class="form-control" style="width:300px;" name="enddate" placeholder="End Date">
    </div>
    <div class="form-group">
      <label for="">Offer Description</label>
      <textarea type="text" class="form-control" style="width:300px;height:200px" name="offerdescription" placeholder=" Offer Description"></textarea>
    </div>

    <div class="form-group">
      <label for="">Upload Image
      </label>
      <input type="file" class="form-control-file" name="offerpic" id="exampleFormControlFile1" required="required">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  {% for message in old('message') %}
    <script type="text/javascript">
      alert('{{ message }}')
    </script>
  {% endfor %}

{% endblock %}
