{% extends 'layout' %}
{% block content %}
  <title>Phoenix United</title>
  <link href="css/autofilltextbox.css" rel="stylesheet" type="text/css"/>

  <!-- banner -->
  <section class="shopbanner"><img src="images/career-banner.jpg" class="scale">
    <div class="banner-dwnarrow scroll-link"><img src="images/arrowdown1.png" class="scale"></div>
  </section>
  <section class="shopbanner-mobile-banner"><img src="images/Careers-banner-mobile.jpg" class="scale"></section>
  <!--banner-->

  <section class="shopmidd-wrap" id="middbody">
    <div class="bredcrum">
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        &raquo;
        <li>Careers</li>
      </ul>
    </div>
    <h1>careers</h1>
    <div class="carrer-wrap">

      <form action="/careers" method="post" enctype="multipart/form-data">

        <div class="queryline01">
          <div class="formtxt">NAME</div>
          <label class="dropdown">
            <select name="ddlgender" id="ddlgender">
              <option value="Mr.">Mr.</option>
              <option value="Mrs.">Mrs.</option>
            </select>
          </label>
          <input name="txtname" type="text" id="txtname" class="txtboxstyle2" required="required"/>
        </div>

        <div class="queryline01">
          <div class="line2-left">
            <div class="formtxt">PHONE NUMBER</div>
            <input name="txtphone" type="text" maxlength="12" id="txtphone" class="txtboxstyle txtbxstyle01" onkeypress="return NumberOnly()" required="required"/>
          </div>
          <div class="line2-right">
            <div class="formtxt">EMAIL</div>
            <input name="txtemail" type="text" id="txtemail" class="txtboxstyle txtbxstyle01" required="required"/>

          </div>
          <div class="clr"></div>
        </div>

        <div class="queryline01">
          <div class="line2-left">
            <div class="formtxt">CITY</div>
            <input name="txtcity" type="text" id="txtcity" class="txtboxstyle txtbxstyle01" required="required"/>

          </div>
          <div class="line2-right">
            <div class="formtxt">UPLOAD RESUME</div>
            <input type="file" name="furesume" id="furesume" class="txtboxstyle txtbxstyle01 txtboxupload" accept="application/pdf" required="required"/>
            <p>pdf file type is supported only</p>

          </div>
          <div class="clr"></div>
        </div>
        <input type="submit" name="btnsubmit" value="Submit" onclick="return validateFormData();" id="btnsubmit" class="submitquery"/>

      </form>
    </div>
    <div class="clr"></div>
  </section>

  {% for message in old('careermessage') %}
    <script type="text/javascript">
      alert(" {{ message }} ")
    </script>
  {% endfor %}

  <script type="text/javascript">
    function NumberOnly() {
      var AsciiValue = event.keyCode
      if ((AsciiValue >= 48 && AsciiValue <= 57) || (AsciiValue == 8 || AsciiValue == 127))
        event.returnValue = true;
      else
        event.returnValue = false;
      }
  </script>

  <script type="text/javascript">
    function validateFormData() {
    // alert("test");
    if (document.getElementById('txtname').value == "") {
      alert("Please Enter Name !");
      document.getElementById('txtname').focus();
      return false;
    }

    if ((isAlpha(document.getElementById('txtname').value)) == false) {
      alert("Please Enter Alphabetical Characters (A-Z) only !");
      document.getElementById('txtname').focus();
      return false;
    }

    if (document.getElementById('txtphone').value == "") {
      alert("Please Enter Your Mobile Number !");
      document.getElementById('txtphone').focus();
      return false;
    }

    var x = document.getElementById('txtphone').value;

    if (isNaN(x) || x.indexOf(" ") != -1) {
      alert("Please Enter a Numeric value (0-9) only !");
      document.getElementById('txtphone').focus();
      return false;
    }

    if (x.length < 10 || x.length > 12) {
      alert("Please enter 10 Digits Contact No.");
      document.getElementById('txtphone').focus();
      return false;
    }


    if (document.getElementById('txtemail').value == "") {
      alert("Please Enter Your Email !");
      document.getElementById('txtemail').focus();
      return false;
    }

    if (!isEmailValid(document.getElementById('txtemail').value)) {
      alert("Your email seems invalid, please check again!")
      document.getElementById('txtemail').focus();
      return false;
    }

    if (document.getElementById('txtcity').value == "") {
      alert("Please Enter Your City !");
      document.getElementById('txtcity').focus();
      return false;
    }

    if ((isAlpha(document.getElementById('txtcity').value)) == false) {
      alert("Please Enter Alphabetical Characters (A-Z) only !");
      document.getElementById('txtcity').focus();
      return false;
    }

    if (document.getElementById('furesume').value == "") {
      alert("Please Upload Your Resume !");
      document.getElementById('furesume').focus();
      return false;
    }

    function isEmailValid(sEmail) {
      var sRegExpr = "\w+([-.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*";
      if (!sEmail.match(/^\w+([-.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$/))
        return false;
      return true;
    }
    // returns true if the string only contains characters A-Z, a-z or 0-9
    function isAlphaNumeric(str) {
      var re = /[^a-zA-Z0-9,-:;&./_''() ]/g
      if (re.test(str)) return false;
      return true;
    }

    // returns true if the string only contains characters A-Z or a-z
    function isAlpha(str) {
      var re = /[^a-zA-Z ]/g
      if (re.test(str)) return false;
      return true;
    }
  }
  </scrip>


