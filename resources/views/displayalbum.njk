{% extends "layout" %}

{% block content %}
  <script type="text/javascript" src="../js/jquery.fancybox.js"></script>
  <link rel="stylesheet" type="text/css" href="../css/jquery.fancybox.css" media="screen"/>
  <script type="text/javascript" src="../js/jquery.fancybox-media.js"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      $('.fancybox').fancybox();
      $('.fancybox-media').attr('rel', 'media-gallery').fancybox({
        openEffect: 'none',
        closeEffect: 'none',
        prevEffect: 'none',
        nextEffect: 'none',
        arrows: false,
        helpers: {
          media: {},
          buttons: {}
        }
      });

    });
  </script>

  <!-- banner -->
  <section class="shopbanner"><img src="../images/gallery-banner.jpg" class="scale">
    <div class="banner-dwnarrow scroll-link"><img src="../images/arrowdown1.png" class="scale"></div>
  </section>
  <!--banner-->
  <!--midd-->
  <section class="shopmidd-wrap" id="middbody">
    <div class="bredcrum">
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        &raquo;
        <li>
          <a href="/displaygallery">Gallery</a>
        </li>
        &raquo;
        <li>{{ albums.description }}</li>
      </ul>
    </div>
    <h1>gallery</h1>
    <div class="galleryinner-head">{{ albums.description }}
      <span>
        <script type="text/javascript">
          var monthNames = [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ];
          var d = new Date('{{ albums.created_at }}');
          document.write(`${d.getDate()} ${monthNames[d.getMonth()]} ${d.getFullYear()}`);
        </script>
      </span>
    </div>

    <div class="picture-gallery-inner-list">
      <ul>

        {% for albums in albums.albums %}
          <li>
            <div class="productview1 second-effect1"><img src="../{{ albums.album_pic }}" class="scale">
              <div class="mask1"></div>
              <div class="content1">
                <a href="../{{ albums.album_pic }}" class="info1 fancybox" data-fancybox-group="gallery">&nbsp;</a>
              </div>
            </div>
          </li>
        {% endfor %}

      </ul>
    </div>
    <div class="clr"></div>

  </section>

{% endblock %}
