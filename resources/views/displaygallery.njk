{% extends "layout" %}

{% block content %}
  <title>Phoenix United Bareilly</title>
  <!-- banner -->
  <section class="shopbanner"><img src="../images/events-banner.jpg" class="scale">
    <div class="banner-dwnarrow scroll-link"><img src="../images/arrowdown1.png" class="scale"></div>
  </section>
  <section class="shopbanner-mobile-banner"><img src="../images/events-banner-mobile.jpg" class="scale"></section>
  <!--banner-->

  <section class="shopmidd-wrap" id="middbody">
    <div class="bredcrum">
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        &raquo;
        <li>Gallery</li>
      </ul>
    </div>
    <h1>gallery</h1>

    <div class="picture-gallery">

      {% for month, gallery in grouped %}

        <h2 class="gallery-subhead">{{ month }}</h2>
        <div class="picture-gallery-list">
          <ul>

            {% for galleryItem in gallery %}
              <li>
                <div class="listimg">
                  <div class="productview second-effect">
                    <img src="../{{ galleryItem.cover_Pic }}" class="scale">
                    <div class="mask"></div>
                    <div class="content">
                      <a href="/displayalbum/{{ galleryItem.id }}" class="info">Click to view more</a>
                    </div>
                  </div>
                </div>
                <div class="caption-head">{{ galleryItem.description }}
                  <span>
                    <script type="text/javascript">
                      var monthNames = [
                        "January",
                        "February",
                        "March",
                        "April",
                        "May",
                        "June",
                        "July",
                        "August",
                        "September",
                        "October",
                        "November",
                        "December"
                      ];
                      var d = new Date('{{ galleryItem.created_at }}');
                      document.write(`${d.getDate()} ${monthNames[d.getMonth()]} ${d.getFullYear()}`);
                    </script>
                  </span>
                </div>
              </li>
            {% endfor %}

          </ul>

        </div>

      {% endfor %}

    </div>

  </section>
{% endblock %}
