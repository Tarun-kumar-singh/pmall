      var monthNames = [
        "January",
        "February",
        "March",
        "April",
        "May",
        "June",
        "July",
        "August",
        "September",
        "October",
        "November",
        "December"
      ];
      var d = {{ event.start_date.getDate() }};
      var m = {{ event.start_date.getMonth() }};
      var m2 = monthNames[m];
      var y = {{ event.start_date.getFullYear() }};

      var d2 = {{ event.end_date.getDate() }};
      var m3 = {{ event.end_date.getMonth() }};
      var m4 = monthNames[m];
      var y2 = {{ event.end_date.getFullYear() }};
      document.write(`${d}th  \n  - ${d2}th ${m4} ${y2} `);
    </script>
  </p>
  <p style="margin-left:20px;">{{event.event_description}}</p>

{% endblock %}
